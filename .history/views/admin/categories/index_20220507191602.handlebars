<style>
    h1 {
        background-color:#E7E9EB;
        
    }
    #to{
        background-color:#E7E9EB;
        padding-left: 115px;
        padding-right: 30px;
        padding-top: 30px;
        padding-bottom: 30px;
    }
</style>

<div class="" id="to">
    
    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                
                <label for="name">Name</label>
                <input type="text" name="name" id="" class="form-control" placeholder="Enter title" aria-describedby="helpId">
            </div>
            <button type="submit" class="btn btn-success">Create Category</button>
        </form>
    </div>
    <hr>
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td><a href="/" class="btn btn-c"></a></td>
            </tr>

            {{/each}}
        </tbody>
        </table>
    </div>
</div>