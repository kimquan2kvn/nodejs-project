<div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">
          <hr>
          <hr>
          <h1 class="my-4">Bài viết
            <small></small>
          </h1>
          {{#each posts}} 
          <!-- Blog Post -->
          <div class="card mb-4">
            <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text">{{body}}</p>
              <a href="/post/{{_id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on {{generateTime date "MMMM Do YYYY"}} by
              <a href="#">Start Bootstrap</a>
            </div>
          </div>
          {{/each}}
